@model WebApplication1.Models.Products
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thêm Sản phẩm Mới</h6>
    </div>
    <div class="card-body">
        <form method="post" action="/Admin/Product/Create">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-info border-bottom pb-2">1. Thông tin cơ bản</h5>
                    <div class="mb-3">
                        <label>Tên sản phẩm</label>
                        <input name="Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Giá bán (VNĐ)</label>
                        <input name="Price" type="number" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Thương hiệu</label>
                        <input name="Brand" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label>Link ảnh đại diện</label>
                        <input name="MainImageUrl" class="form-control" placeholder="/images/..." />
                    </div>
                    <div class="mb-3">
                        <label>Mô tả ngắn</label>
                        <textarea name="Description" class="form-control" rows="2"></textarea>
                    </div>
                </div>

                <div class="col-md-6">
                    <h5 class="text-success border-bottom pb-2">2. Kho hàng & Biến thể</h5>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label>Số lượng tồn kho</label>
                            <input name="Stock" type="number" class="form-control" value="10" required />
                        </div>
                        <div class="col-6 mb-3">
                            <label>Màu sắc</label>
                            <input name="Color" class="form-control" value="Đen" />
                        </div>
                        <div class="col-6 mb-3">
                            <label>RAM (Ví dụ: 8GB)</label>
                            <input name="Ram" class="form-control" value="8GB" />
                        </div>
                        <div class="col-6 mb-3">
                            <label>Bộ nhớ trong</label>
                            <input name="Rom" class="form-control" value="128GB" />
                        </div>
                    </div>

                    <h5 class="text-warning border-bottom pb-2 mt-3">3. Thông số kỹ thuật</h5>
                    <div class="mb-3">
                        <label>Màn hình</label>
                        <input name="Screen" class="form-control" placeholder="Ví dụ: 6.7 inch OLED" />
                    </div>
                    <div class="mb-3">
                        <label>Camera</label>
                        <input name="Camera" class="form-control" placeholder="Ví dụ: 50MP + 12MP" />
                    </div>
                    <div class="mb-3">
                        <label>CPU</label>
                        <input name="CPU" class="form-control" placeholder="Ví dụ: Snapdragon 8 Gen 2" />
                    </div>
                    <div class="mb-3">
                        <label>Pin</label>
                        <input name="Battery" class="form-control" placeholder="Ví dụ: 5000 mAh" />
                    </div>
                </div>
            </div>

            <div class="mt-4 text-center">
                <button type="submit" class="btn btn-success px-5">Lưu sản phẩm</button>
                <a href="/Admin/Product" class="btn btn-secondary px-5">Hủy</a>
            </div>
        </form>
    </div>
</div>