@model WebApplication1.Models.OrderEdit.Order.Order
@{
    var variants = ViewBag.Variants as List<ProductVariant>;
}

<h2>Chi tiết đơn hàng #@Model.Id</h2>

<p>Trạng thái: <strong>@Model.Status</strong></p>

<table border="1" cellpadding="8">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Màu</th>
            <th>Bộ nhớ</th>
            <th>Số lượng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            var variant = variants.FirstOrDefault(v => v.Id == item.ProductId);

            <tr>
                <td>@variant?.Product?.Name</td>
                <td>@variant?.Color</td>
                <td>@variant?.Memory</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>
