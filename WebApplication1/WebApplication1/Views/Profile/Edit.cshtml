@model WebApplication1.Models.UserEdit.ProfileEditViewModel
@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Chỉnh sửa hồ sơ</h5>
                </div>

                <div class="card-body">
                    <form asp-action="Edit"
                          method="post"
                          enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <!-- Avatar -->
                        <div>
                            <img src="@Model.CurrentAvatarUrl"
                                 style="width:120px;height:120px;border-radius:50%;object-fit:cover" />
                        </div>

                        <div>
                            <label>Ảnh đại diện</label>
                            <input asp-for="AvatarFile" type="file" accept="image/*" />
                        </div>

                        <hr />


                        <div class="mb-3">
                            <label class="form-label">Họ và tên</label>
                            <input asp-for="FullName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa chỉ</label>
                            <input asp-for="FullAddress" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ngày sinh</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                Lưu thay đổi
                            </button>

                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
