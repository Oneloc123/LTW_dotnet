@{
    var products = ViewBag.Products as List<WebApplication1.Models.Products>;
    var blogs = ViewBag.Blogs as List<WebApplication1.Models.Blogs>;
    ViewData["Title"] = "Home Page";
}

<!-- Banner -->
<div style="width:100%; height:300px; background:url('/images/banner.jpg') center/cover;">
    <h1 style="color:white; padding:100px 20px;">Chào mừng đến với website!</h1>
</div>

<hr />

<!-- Sản phẩm nổi bật -->
<h2>Sản phẩm nổi bật</h2>
<div style="display:flex; gap:20px;">
    @foreach (var p in products)
    {
        <div style="width:30%; border:1px solid #ddd; border-radius:5px; padding:10px;">
            <img src="@p.Image" style="width:100%; height:200px; object-fit:cover;" />
            <h3>@p.Name</h3>
            <p>Giá: @p.Price.ToString("N0") đ</p>
            <p>@p.Description</p>

            <a href="@Url.Action("ProductDetail", "Home", new { id = p.Id })"
               class="btn btn-primary">
                Xem chi tiết
            </a>
        </div>
    }
</div>

<hr />

<!-- Blog nổi bật -->
<h2>Blog nổi bật</h2>

<div style="display:flex; gap:20px;">
    @foreach (var b in blogs)
    {
        <div style="width:45%; border:1px solid #ddd; border-radius:5px; padding:10px;">
            <img src="@b.Thumbnail" style="width:100%; height:200px; object-fit:cover;" />
            <h3>@b.Title</h3>
            <p>@b.Summary</p>
            <button class="btn btn-success">Đọc bài viết</button>
        </div>
    }
</div>
