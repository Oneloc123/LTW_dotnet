</div>

<!-- Sản phẩm nổi bật -->
<section id="featured-products" class="container py-5">
    <div class="section-title">
        <h2>Sản phẩm nổi bật</h2>
        <p class="text-muted mt-2">Được đánh giá cao bởi cộng đồng</p>
    </div>

    <div class="row g-4">
        @{
            // Lấy danh sách từ ViewBag
            var rawList = ViewBag.Products as List<WebApplication1.Models.Product>;

            // LOGIC MỚI: Chỉ lấy 6 sản phẩm đầu tiên (nếu danh sách có nhiều hơn)
            var listSanPham = rawList != null ? rawList.Take(6).ToList() : new List<WebApplication1.Models.Product>();
        }

        @if (listSanPham != null && listSanPham.Any())
        {
            @foreach (var item in listSanPham)
            {
                // Tính toán sao trung bình (Logic cũ giữ nguyên)
                double ratingSum = item.Reviews != null ? item.Reviews.Sum(r => r.Rating) : 0;
                int reviewCount = item.Reviews != null ? item.Reviews.Count : 0;
                double avgRating = reviewCount > 0 ? ratingSum / reviewCount : 0;

                <div class="col-lg-4 col-md-6">
                    <div class="product-card">
                        <div style="overflow: hidden; position: relative;">
                            <a href="/Product/Detail/@item.Id">
                                <img src="@(string.IsNullOrEmpty(item.MainImageUrl) ? "https://placehold.co/400" : item.MainImageUrl)"
                                     alt="@item.Name" class="product-img" />
                            </a>

                            @if (reviewCount > 0)
                            {
                                <span style="position: absolute; top: 10px; right: 10px; background: rgba(0,0,0,0.6); color: #fff; padding: 2px 8px; border-radius: 4px; font-size: 12px;">
                                    <i class="fas fa-comment-alt"></i> @reviewCount
                                </span>
                            }
                        </div>

                        <div class="product-info">
                            <h3 class="product-title">@item.Name</h3>

                            <div class="mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Round(avgRating))
                                    {
                                        <i class="fas fa-star text-warning" style="font-size: 14px;"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star text-muted" style="font-size: 14px;"></i>
                                    }
                                }
                                <span class="text-muted ms-1" style="font-size: 13px;">(@ratingSum điểm)</span>
                            </div>

                            <p class="product-price">@item.Price.ToString("N0") đ</p>

                            <p class="product-description">
                                @(string.IsNullOrEmpty(item.Description) ? "Đang cập nhật..." : item.Description)
                            </p>

                            <div class="d-flex justify-content-between align-items-center">
                                <a href="/Product/Detail/@item.Id" class="btn btn-primary-custom btn-custom">
                                    Xem chi tiết
                                </a>
                                <span class="badge bg-danger text-white p-2">
                                    <i class="fas fa-fire"></i> Hot
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-warning">
                    Chưa có sản phẩm nào để hiển thị.
                </div>
            </div>
        }
    </div>

    @if (listSanPham != null && listSanPham.Any())
    {
        <div class="text-center mt-5">
            <a href="/Product/Index" class="btn btn-outline-primary btn-lg px-4">
                Xem tất cả sản phẩm
            </a>
        </div>
    }
</section>

<hr class="section-divider" />

<!-- Blog nổi bật -->
<section class="container py-5">
    <div class="section-title">
        <h2>Blog nổi bật</h2>
        <p class="text-muted mt-2">Cập nhật thông tin và mẹo hữu ích</p>
    </div>

    <div class="row g-4">
        @foreach (var b in blogs)
        {
            <div class="col-lg-6">
                <div class="blog-card">
                    <div style="overflow: hidden;">
                        <img src="@b.Thumbnail" alt="@b.Title" class="blog-img" />
                    </div>
                    <div class="blog-content">
                        <h3 class="blog-title">@b.Title</h3>
                        <p class="blog-summary">@b.Summary</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("BlogDetail", "Home", new { id = b.Id })"
                               class="btn btn-success-custom btn-custom">
                                Đọc bài viết
                            </a>
                            <small class="text-muted">
                                <i class="far fa-clock me-1"></i> 5 phút đọc
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (blogs != null && blogs.Count > 0)
    {
        <div class="text-center mt-5">
            <a href="@Url.Action("Blogs", "Home")" class="btn btn-outline-success btn-lg px-4">
                Xem tất cả bài viết
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            Hiện chưa có bài viết nào. Vui lòng quay lại sau!
        </div>
    }
</section>

<!-- Thêm Font Awesome cho icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<script>
    // Hiệu ứng scroll mượt cho anchor links
    document.addEventListener('DOMContentLoaded', function() {
        const anchorLinks = document.querySelectorAll('a[href^="#"]');

        anchorLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                if(this.getAttribute('href') !== '#') {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);

                    if(targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                    }
                }
            });
        });

        // Thêm hiệu ứng fade-in khi scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if(entry.isIntersecting) {
                    entry.target.classList.add('fade-in');
                }
            });
        }, observerOptions);

        // Quan sát các phần tử cần hiệu ứng
        document.querySelectorAll('.product-card, .blog-card').forEach(card => {
            observer.observe(card);
        });
    });
</script>

<style>
    /* Hiệu ứng fade-in khi scroll */
    .product-card, .blog-card {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.6s ease, transform 0.6s ease;
    }

    .fade-in {
        opacity: 1;
        transform: translateY(0);
    }
</style>