@model WebApplication1.Models.Carts

@if (!Model.Items.Any())
{
    <div class="text-center py-4">
        <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
        <p class="text-muted">Chưa có sản phẩm trong giỏ hàng</p>
    </div>
}
else
{
    <ul class="list-group mb-3">
        <!-- Dùng trực tiếp Items -->
        @foreach (var item in Model.Items)
        {
            <li class="list-group-item d-flex align-items-center">
                <img src="@item.ImageUrl" width="50" class="me-2" />
                <div class="flex-grow-1">
                    <div>@item.Name</div>
                    <small>x @item.Quantity</small>
                </div>
                <strong>@item.Total.ToString("N0")đ</strong> <!-- Total = FinalPrice * Quantity -->
            </li>
        }
    </ul>

    <div class="d-grid gap-2">
        <a href="@Url.Action("Index", "Cart")" class="btn btn-primary w-100">Xem giỏ hàng</a>
        <a href="@Url.Action("Index", "Checkout")" class="btn btn-outline-primary w-100">Thanh toán</a>
    </div>
}
