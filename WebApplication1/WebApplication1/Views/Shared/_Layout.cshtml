<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Top Bar với thông tin hỗ trợ và chào mừng -->
        <div class="top-bar bg-dark text-light py-2">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <small>
                            <i class="fas fa-headset me-1"></i> Hỗ trợ 24/7: 1800.9999 |
                            <i class="fas fa-truck ms-3 me-1"></i> Miễn phí vận chuyển đơn từ 2 triệu
                        </small>
                    </div>
                    <div class="col-md-6 text-end">
                        <small>
                            <a href="#" class="text-light text-decoration-none me-3">
                                <i class="fas fa-map-marker-alt me-1"></i> Hệ thống cửa hàng
                            </a>
                            <a href="#" class="text-light text-decoration-none me-3">
                                <i class="fas fa-question-circle me-1"></i> Hỗ trợ
                            </a>
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-user me-1"></i> Tài khoản
                            </a>
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3 sticky-top">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/images/logo-techphone.svg" alt="TechPhone" height="40" class="d-inline-block align-text-top">
                    <span class="fw-bold text-primary ms-2">TECH<span class="text-danger">PHONE</span></span>
                </a>

                <!-- Search Bar -->
                <div class="search-bar mx-lg-3 flex-grow-1">
                    <form asp-controller="Product" asp-action="Index" method="get">
                        <div class="input-group">
                            <input type="text" name="searchString" class="form-control rounded-start" placeholder="Tìm kiếm điện thoại, phụ kiện..." aria-label="Search">

                            <select class="form-select w-auto" style="max-width: 150px;" name="category">
                                <option value="">Tất cả danh mục</option>
                                <option value="smartphone">Điện thoại</option>
                                <option value="accessory">Phụ kiện</option>
                            </select>

                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex align-items-center ms-lg-3">
                    <a href="#" class="nav-link text-dark position-relative me-3">
                        <i class="fas fa-heart fa-lg"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            0
                        </span>
                    </a>
                    <a class="nav-link text-dark position-relative me-3" data-bs-toggle="offcanvas" data-bs-target="#cartOffcanvas">
                        <i class="fas fa-shopping-cart fa-lg"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            0
                        </span>
                    </a>
                    @await Html.PartialAsync("_UserMenu")

                </div>

                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <!-- Category Navigation -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary py-2">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="brandDropdown" data-bs-toggle="dropdown">
                                <i class="fas fa-mobile-alt me-1"></i> Thương hiệu
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="brandDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-brand="Apple">
                                        <img src="/images/brands/apple.svg" alt="Apple" height="20" class="me-2"> iPhone
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-brand="Samsung">
                                        <img src="/images/brands/samsung.svg" alt="Samsung" height="20" class="me-2"> Samsung
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-brand="Xiaomi">
                                        <img src="/images/brands/xiaomi.svg" alt="Xiaomi" height="20" class="me-2"> Xiaomi
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-brand="Oppo">
                                        <img src="/images/brands/oppo.svg" alt="Oppo" height="20" class="me-2"> Oppo
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="priceDropdown" data-bs-toggle="dropdown">
                                <i class="fas fa-tags me-1"></i> Giá tiền
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="priceDropdown">
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-maxPrice="3000000">Dưới 3 triệu</a></li>

                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-minPrice="3000000" asp-route-maxPrice="6000000">3 - 6 triệu</a></li>

                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-minPrice="6000000" asp-route-maxPrice="10000000">6 - 10 triệu</a></li>

                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-minPrice="20000000" asp-route-maxPrice="25000000">20 - 25 triệu</a></li>

                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-minPrice="25000000">Trên 25 triệu</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accessoryDropdown" data-bs-toggle="dropdown">
                                <i class="fas fa-headphones me-1"></i> Phụ kiện
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="accessoryDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-category="Tai nghe">
                                        Tai nghe
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-category="Sạc dự phòng">
                                        Sạc dự phòng
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-category="Ốp lưng">
                                        Ốp lưng
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-category="Cáp sạc">
                                        Cáp sạc
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-category="Smartwatch">
                                        Smartwatch
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-star me-1"></i> Sản phẩm nổi bật
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Blog"
                               asp-action="Index">
                                <i class="fas fa-newspaper me-1"></i> Tin công nghệ
                            </a>
                        </li>

                    </ul>

                    <!-- Hotline on category bar -->
                    <div class="d-flex">
                        <a href="tel:18009999" class="btn btn-warning btn-sm">
                            <i class="fas fa-phone-alt me-1"></i> HOTLINE: 1800.9999
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Offcanvas Cart -->
        <div class="offcanvas offcanvas-end" tabindex="-1" id="cartOffcanvas">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title">
                    <i class="fas fa-shopping-cart me-2"></i>Giỏ hàng
                </h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
            </div>
            <div class="offcanvas-body">
                <div class="text-center py-4">
                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Chưa có sản phẩm trong giỏ hàng</p>
                </div>
                <div class="mt-auto">
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary">Xem giỏ hàng</button>
                        <button class="btn btn-outline-primary">Thanh toán</button>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main role="main" class="pb-3" style="height: 5000px">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<style>
    .top-bar a:hover {
        color: #ffc107 !important;
    }

    .search-bar .input-group {
        max-width: 600px;
        margin: 0 auto;
    }

    .promo-banner {
        background: linear-gradient(90deg, #007bff, #6610f2);
    }

    .sticky-top {
        position: sticky;
        top: 0;
        z-index: 1020;
    }

    .dropdown-item img {
        width: 20px;
        height: 20px;
        object-fit: contain;
    }

