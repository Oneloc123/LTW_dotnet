<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            min-height: 100vh;
            display: flex;
        }

        .sidebar {
            width: 240px;
            background-color: #212529;
            color: #fff;
        }

            .sidebar a {
                color: #adb5bd;
                text-decoration: none;
                display: block;
                padding: 12px 20px;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #343a40;
                    color: #fff;
                }

        .content {
            flex: 1;
            padding: 20px;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <h5 class="text-center py-3 border-bottom">ADMIN PANEL</h5>

        <a asp-area="Admin" asp-controller="User" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "User" ? "active" : "")">
            👤 Quản lý User
        </a>

        <a asp-area="Admin" asp-controller="WishList" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "WishList" ? "active" : "")">
            ❤️ Quản lý WishList
        </a>
    </div>

    <!-- MAIN CONTENT -->
    <div class="content">
        @RenderBody()
    </div>

</body>
</html>
