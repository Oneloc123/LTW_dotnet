@model WebApplication1.Models.Products
@using WebApplication1.Models

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Đã bổ sung Layout

    // XỬ LÝ LỖI LAMBDA EXPRESSION:
    // Tách logic xử lý chuỗi ra khỏi HTML để tránh lỗi Runtime
    string moTaHienThi = "Đang cập nhật...";
    if (!string.IsNullOrEmpty(Model.Description))
    {
        moTaHienThi = Model.Description.Replace("\n", "<br>");
    }
}

<style>
    /* CSS giữ nguyên như cũ */
    .product-detail-container {
        background-color: #fff;
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        border-radius: 4px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    .top-section {
        display: flex;
        gap: 30px;
        border-bottom: 1px solid #eee;
        padding-bottom: 30px;
        margin-bottom: 30px;
    }

    .img-main-box {
        flex: 0 0 40%;
        text-align: center;
    }

        .img-main-box img {
            width: 100%;
            max-width: 400px;
            height: auto;
            object-fit: contain;
        }

    .info-box {
        flex: 1;
    }

    .product-name {
        font-size: 24px;
        font-weight: 700;
        color: #333;
        margin-bottom: 10px;
    }

    .product-price {
        font-size: 28px;
        font-weight: bold;
        color: #d70018;
        margin-bottom: 20px;
    }

    .btn-add-cart {
        display: inline-block;
        background-color: #d70018;
        color: white;
        padding: 15px 40px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 16px;
        transition: 0.3s;
        border: none;
        cursor: pointer;
        width: 100%;
    }

        .btn-add-cart:hover {
            background-color: #c00015;
            color: white;
        }

    .content-section {
        display: flex;
        gap: 30px;
    }

    .left-content {
        flex: 0 0 65%;
    }

    .right-content {
        flex: 1;
    }

    .section-header {
        font-size: 18px;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 15px;
        padding-bottom: 5px;
        border-bottom: 2px solid #f0f0f0;
    }

    .specs-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

        .specs-table td {
            padding: 10px;
            border: 1px solid #eee;
        }

        .specs-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    .review-item {
        border-bottom: 1px solid #eee;
        padding: 15px 0;
    }

    .review-user {
        font-weight: bold;
        margin-bottom: 5px;
    }
</style>

<div class="product-detail-container">

    <div class="top-section">
        <div class="img-main-box">
            <img src="@(string.IsNullOrEmpty(Model.MainImageUrl) ? "https://placehold.co/400" : Model.MainImageUrl)" alt="@Model.Name" />
        </div>

        <div class="info-box">
            <h1 class="product-name">@Model.Name</h1>

            <div class="product-price">
                @Model.Price.ToString("#,##0")₫
            </div>

            <p style="margin-bottom: 20px;">
                <strong>Thương hiệu:</strong> @Model.Brand <br>
                <strong>Tình trạng:</strong> <span style="color:green; font-weight:bold;">Còn hàng</span>
            </p>

            <button class="btn-buy"
                    onclick="addToCart(@Model.ProductVariants.First().Id)">
                THÊM VÀO GIỎ HÀNG
            </button>
        </div>
    </div>

    <div class="content-section">

        <div class="left-content">

            <div style="margin-bottom: 40px;">
                <h3 class="section-header" style="color: #d70018;">Đặc điểm nổi bật</h3>
                <div style="line-height: 1.6; text-align: justify;">
                    @Html.Raw(moTaHienThi)
                </div>
            </div>

            <!--Reviews -->
            <div>
                <h3 class="section-header">Đánh giá & Nhận xét</h3>

                <div style="margin-bottom: 30px; background: #fafafa; padding: 20px; border-radius: 8px; border: 1px dashed #ccc;">

                    <h4 style="margin-top: 0;">Viết đánh giá của bạn</h4>

                    @{
                        var isLoggedIn = Context.Session.GetInt32("UserId") != null;
                    }

                    @if (isLoggedIn)
                    {



                        <form method="post" action="/Product/AddReview">
                            <input type="hidden" name="productId" value="@Model.Id" />

                            <div style="margin-bottom: 15px;">
                                <label style="font-weight: bold;">Đánh giá:</label>
                                <select name="rating" style="padding: 5px; border-radius: 4px;">
                                    <option value="5">5 Sao (Tuyệt vời)</option>
                                    <option value="4">4 Sao (Tốt)</option>
                                    <option value="3">3 Sao (Bình thường)</option>
                                    <option value="2">2 Sao (Tệ)</option>
                                    <option value="1">1 Sao (Rất tệ)</option>
                                </select>
                            </div>

                            <div style="margin-bottom: 15px;">
                                <textarea name="comment" rows="3" placeholder="Sản phẩm dùng thế nào?..." required
                                style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;"></textarea>
                            </div>

                            <button type="submit" class="btn-add-cart" style="width: auto; padding: 10px 30px; font-size: 14px;">
                                Gửi đánh giá
                            </button>
                        </form>
                    }
                    else
                    {
                        //Chua dang nhap
                        <a asp-controller="Account"
                           asp-action="Login"
                           class="btn btn-outline-primary">
                            🔐 Đăng nhập để đánh giá
                        </a>

                    }

                </div>

                @if (Model.Reviews != null && Model.Reviews.Any())
                {
                    <div style="border: 1px solid #eee; padding: 15px; border-radius: 8px;">
                        @foreach (var review in Model.Reviews)
                        {
                            if (review != null)
                            {
                                <div class="review-item">
                                    <div class="review-user">
                                        @(review.GetType().GetProperty("UserName")?.GetValue(review, null) ?? "Khách hàng")

                                        <span style="color: #ffbf00; margin-left: 10px;">
                                            @(review.GetType().GetProperty("Rating")?.GetValue(review, null) ?? 5)
                                            <i class="fa-solid fa-star"></i>
                                        </span>
                                    </div>
                                    <div>
                                        @(review.GetType().GetProperty("Comment")?.GetValue(review, null))
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
                else
                {
                    <p style="color: #777; font-style: italic;">Chưa có đánh giá nào cho sản phẩm này.</p>
                }
            </div>
        </div>

        <div class="right-content">
            <h3 class="section-header">Thông số kỹ thuật</h3>
            @if (Model.Specifications != null && Model.Specifications.Count > 0)
            {
                <table class="specs-table">
                    @foreach (var spec in Model.Specifications)
                    {
                        var s = spec as WebApplication1.Models.Specification;
                        if (s != null)
                        {
                            <tr>
                                <td style="width: 140px; font-weight: 600; color: #666;">@s.SpecName</td>
                                <td>@s.SpecValue</td>
                            </tr>
                        }
                    }
                </table>
            }
            else
            {
                <p>Đang cập nhật thông số...</p>
            }
        </div>
    </div>
</div>


<!--DANH SÁCH SẢN PHẨM LIÊN QUAN -->
<div class="product-detail-container" style="margin-top: 20px;">
    <h3 class="section-header" style="border-bottom: 2px solid #d70018; padding-bottom: 10px; margin-bottom: 20px;">
        Sản phẩm liên quan
    </h3>

    @{

        var relatedList = ViewBag.RelatedProducts as List<WebApplication1.Models.Products>;
    }

    @if (relatedList != null && relatedList.Count > 0)
    {
        <div class="related-row">
            @foreach (var item in relatedList)
            {
                <div class="related-item">
                    <div class="card-product">
                        <a href="/Product/Detail/@item.Id" style="text-decoration: none; color: inherit;">
                            <div class="img-box">
                                <img src="@(string.IsNullOrEmpty(item.MainImageUrl) ? "https://placehold.co/200" : item.MainImageUrl)" alt="@item.Name" />
                            </div>

                            <div class="info-box-related">
                                <h4 class="name-related">@item.Name</h4>
                                <div class="price-related">
                                    @item.Price.ToString("#,##0")₫
                                </div>
                            </div>
                        </a>

                        <div style="margin-top: 10px;">
                            <a href="/Product/Detail/@item.Id" class="btn-view-detail">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>Không có sản phẩm liên quan nào.</p>
    }
</div>

<style>
    .related-row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .related-item {
        flex: 0 0 calc(25% - 15px);
        box-sizing: border-box;
    }


    .card-product {
        border: 1px solid #eee;
        padding: 15px;
        border-radius: 8px;
        transition: 0.3s;
        text-align: center;
        background: #fff;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .card-product:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

    .img-box img {
        width: 100%;
        height: 180px;
        object-fit: contain;
        margin-bottom: 10px;
    }

    .name-related {
        font-size: 16px;
        font-weight: 600;
        margin: 10px 0;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 40px;
    }

    .price-related {
        color: #d70018;
        font-weight: bold;
        font-size: 18px;
    }

    .btn-view-detail {
        display: block;
        background-color: #f0f0f0;
        color: #333;
        padding: 8px;
        border-radius: 4px;
        text-decoration: none;
        font-size: 14px;
        font-weight: 600;
        transition: 0.2s;
    }

        .btn-view-detail:hover {
            background-color: #d70018;
            color: #fff;
        }
</style>