@model WebApplication1.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<style>
    
    .product-detail-container {
        background-color: #fff;
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        border-radius: 4px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    
    .top-section {
        display: flex;
        gap: 30px;
        border-bottom: 1px solid #eee;
        padding-bottom: 30px;
        margin-bottom: 30px;
    }

    .img-main-box {
        flex: 0 0 40%; 
        text-align: center;
    }

        .img-main-box img {
            width: 100%;
            max-width: 400px;
            height: auto;
            object-fit: contain;
        }

    .info-box {
        flex: 1; 
    }

    .product-name {
        font-size: 24px;
        font-weight: 700;
        color: #333;
        margin-bottom: 10px;
    }

    .product-price {
        font-size: 28px;
        font-weight: bold;
        color: #d70018; 
        margin-bottom: 20px;
    }

    .btn-add-cart {
        display: inline-block;
        background-color: #d70018;
        color: white;
        padding: 15px 40px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 16px;
        transition: 0.3s;
    }

        .btn-add-cart:hover {
            background-color: #c00015;
            color: white;
        }

    
    .content-section {
        display: flex;
        gap: 30px;
    }

    .left-content {
        flex: 0 0 65%; 
    }

    .right-content {
        flex: 1; 
    }

    
    .section-header {
        font-size: 18px;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 15px;
        padding-bottom: 5px;
        border-bottom: 2px solid #f0f0f0;
    }

    
    .specs-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

        .specs-table td {
            padding: 10px;
            border: 1px solid #eee;
        }

        .specs-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    
    .review-item {
        border-bottom: 1px solid #eee;
        padding: 15px 0;
    }

    .review-user {
        font-weight: bold;
        margin-bottom: 5px;
    }
</style>

