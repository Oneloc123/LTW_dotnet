    <div class="content-section">

        <div class="left-content">

            <div style="margin-bottom: 40px;">
                <h3 class="section-header" style="color: #d70018;">Đặc điểm nổi bật</h3>
                <div style="line-height: 1.6; text-align: justify;">
                    @Html.Raw(Model.Description.Replace("\n", "<br>"))
                </div>
            </div>

            <div>
                <h3 class="section-header">Đánh giá & Nhận xét</h3>

                @if (Model.Reviews != null && Model.Reviews.Count > 0)
                {
                    <div style="border: 1px solid #eee; padding: 15px; border-radius: 8px;">
                        @foreach (var review in Model.Reviews)
                        {
                          
                            var r = review as WebApplication1.Models.Reviews;
                            if (r != null)
                            {
                                <div class="review-item">
                                    <div class="review-user">
                                        @r.UserName
                                        <span style="color: #ffbf00; margin-left: 10px;">
                                            @r.Rating <i class="fa-solid fa-star"></i>
                                        </span>
                                    </div>
                                    <div>@r.Comment</div>
                                </div>
                            }
                        }
                    </div>
                }
                else
                {
                    <p>Chưa có đánh giá nào cho sản phẩm này.</p>
                }

                <div style="margin-top: 20px;">
                    <textarea placeholder="Viết đánh giá của bạn..." style="width: 100%; padding: 10px; height: 80px;"></textarea>
                    <button style="margin-top: 10px; padding: 5px 20px; cursor: pointer;">Gửi đánh giá</button>
                </div>
            </div>

        </div>


        <div class="right-content">
            <h3 class="section-header">Thông số kỹ thuật</h3>

            @if (Model.Specifications != null && Model.Specifications.Count > 0)
            {
                <table class="specs-table">
                    @foreach (var spec in Model.Specifications)
                    {
                        var s = spec as WebApplication1.Models.Specification;
                        if (s != null)
                        {
                            <tr>
                                <td style="width: 120px; font-weight: 600; color: #666;">@s.SpecName</td>
                                <td>@s.SpecValue</td>
                            </tr>
                        }
                    }
                </table>
            }
            else
            {
                <p>Đang cập nhật thông số...</p>
            }
        </div>

    </div>

</div>