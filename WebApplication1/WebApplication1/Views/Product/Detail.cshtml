@model WebApplication1.Models.Product
@using WebApplication1.Models

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Đã bổ sung Layout

    // XỬ LÝ LỖI LAMBDA EXPRESSION:
    // Tách logic xử lý chuỗi ra khỏi HTML để tránh lỗi Runtime
    string moTaHienThi = "Đang cập nhật...";
    if (!string.IsNullOrEmpty(Model.Description))
    {
        moTaHienThi = Model.Description.Replace("\n", "<br>");
    }
}

<style>
    /* CSS giữ nguyên như cũ */
    .product-detail-container {
        background-color: #fff;
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        border-radius: 4px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    .top-section {
        display: flex;
        gap: 30px;
        border-bottom: 1px solid #eee;
        padding-bottom: 30px;
        margin-bottom: 30px;
    }

    .img-main-box {
        flex: 0 0 40%;
        text-align: center;
    }

        .img-main-box img {
            width: 100%;
            max-width: 400px;
            height: auto;
            object-fit: contain;
        }

    .info-box {
        flex: 1;
    }

    .product-name {
        font-size: 24px;
        font-weight: 700;
        color: #333;
        margin-bottom: 10px;
    }

    .product-price {
        font-size: 28px;
        font-weight: bold;
        color: #d70018;
        margin-bottom: 20px;
    }

    .btn-add-cart {
        display: inline-block;
        background-color: #d70018;
        color: white;
        padding: 15px 40px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 16px;
        transition: 0.3s;
        border: none;
        cursor: pointer;
        width: 100%;
    }

        .btn-add-cart:hover {
            background-color: #c00015;
            color: white;
        }

    .content-section {
        display: flex;
        gap: 30px;
    }

    .left-content {
        flex: 0 0 65%;
    }

    .right-content {
        flex: 1;
    }

    .section-header {
        font-size: 18px;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 15px;
        padding-bottom: 5px;
        border-bottom: 2px solid #f0f0f0;
    }

    .specs-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

        .specs-table td {
            padding: 10px;
            border: 1px solid #eee;
        }

        .specs-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    .review-item {
        border-bottom: 1px solid #eee;
        padding: 15px 0;
    }

    .review-user {
        font-weight: bold;
        margin-bottom: 5px;
    }
</style>

<div class="product-detail-container">

    <div class="top-section">
        <div class="img-main-box">
            <img src="@(string.IsNullOrEmpty(Model.MainImageUrl) ? "https://placehold.co/400" : Model.MainImageUrl)" alt="@Model.Name" />
        </div>

        <div class="info-box">
            <h1 class="product-name">@Model.Name</h1>

            <div class="product-price">
                @Model.Price.ToString("#,##0")₫
            </div>

            <p style="margin-bottom: 20px;">
                <strong>Thương hiệu:</strong> @Model.Brand <br>
                <strong>Tình trạng:</strong> <span style="color:green; font-weight:bold;">Còn hàng</span>
            </p>

            <form method="post" action="/Cart/AddToCart" style="margin-top: 20px;">
                <input type="hidden" name="id" value="@Model.Id" />

                <div style="margin-bottom: 15px; display: flex; align-items: center; gap: 10px;">
                    <label style="font-weight: bold;">Số lượng:</label>
                    <input type="number" name="quantity" value="1" min="1" max="100"
                           style="width: 60px; padding: 5px; text-align: center; border: 1px solid #ccc; border-radius: 4px;">
                </div>

                <button type="submit" class="btn-add-cart">
                    <i class="fa-solid fa-cart-plus"></i> Thêm vào giỏ hàng
                </button>
            </form>
        </div>
    </div>

    <div class="content-section">

        <div class="left-content">

            <div style="margin-bottom: 40px;">
                <h3 class="section-header" style="color: #d70018;">Đặc điểm nổi bật</h3>
                <div style="line-height: 1.6; text-align: justify;">
                    @Html.Raw(moTaHienThi)
                </div>
            </div>

            <!--Reviews -->
            <div>
                <h3 class="section-header">Đánh giá & Nhận xét</h3>

                <div style="margin-bottom: 30px; background: #fafafa; padding: 20px; border-radius: 8px; border: 1px dashed #ccc;">

                    <h4 style="margin-top: 0;">Viết đánh giá của bạn</h4>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <p style="font-size: 13px; color: green;">
                            <i class="fa-solid fa-user-check"></i> Bạn đang viết dưới tên: <strong>@User.Identity.Name</strong>
                        </p>
                    }
                    else
                    {
                        <p style="font-size: 13px; color: #666;">
                            <i class="fa-solid fa-user-secret"></i> Bạn đang viết ẩn danh (Guest)
                        </p>
                    }

                    <form method="post" action="/Product/AddReview">
                        <input type="hidden" name="productId" value="@Model.Id" />

                        <div style="margin-bottom: 15px;">
                            <label style="font-weight: bold;">Đánh giá:</label>
                            <select name="rating" style="padding: 5px; border-radius: 4px;">
                                <option value="5">5 Sao (Tuyệt vời)</option>
                                <option value="4">4 Sao (Tốt)</option>
                                <option value="3">3 Sao (Bình thường)</option>
                                <option value="2">2 Sao (Tệ)</option>
                                <option value="1">1 Sao (Rất tệ)</option>
                            </select>
                        </div>

                        <div style="margin-bottom: 15px;">
                            <textarea name="comment" rows="3" placeholder="Sản phẩm dùng thế nào?..." required
                                      style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;"></textarea>
                        </div>

                        <button type="submit" class="btn-add-cart" style="width: auto; padding: 10px 30px; font-size: 14px;">
                            Gửi đánh giá
                        </button>
                    </form>
                </div>

                @if (Model.Reviews != null && Model.Reviews.Any())
                {
                    <div style="border: 1px solid #eee; padding: 15px; border-radius: 8px;">
                        @foreach (var review in Model.Reviews)
                        {
                            if (review != null)
                            {
                                <div class="review-item">
                                    <div class="review-user">
                                        @(review.GetType().GetProperty("UserName")?.GetValue(review, null) ?? "Khách hàng")

                                        <span style="color: #ffbf00; margin-left: 10px;">
                                            @(review.GetType().GetProperty("Rating")?.GetValue(review, null) ?? 5)
                                            <i class="fa-solid fa-star"></i>
                                        </span>
                                    </div>
                                    <div>
                                        @(review.GetType().GetProperty("Comment")?.GetValue(review, null))
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
                else
                {
                    <p style="color: #777; font-style: italic;">Chưa có đánh giá nào cho sản phẩm này.</p>
                }
            </div>
        </div>

        <div class="right-content">
            <h3 class="section-header">Thông số kỹ thuật</h3>
            @if (Model.Specifications != null && Model.Specifications.Count > 0)
            {
                <table class="specs-table">
                    @foreach (var spec in Model.Specifications)
                    {
                        var s = spec as WebApplication1.Models.Specification;
                        if (s != null)
                        {
                            <tr>
                                <td style="width: 140px; font-weight: 600; color: #666;">@s.SpecName</td>
                                <td>@s.SpecValue</td>
                            </tr>
                        }
                    }
                </table>
            }
            else
            {
                <p>Đang cập nhật thông số...</p>
            }
        </div>
    </div>
</div>