@model List<WebApplication1.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<style>
    /* --- CẤU TRÚC CHUNG --- */
    * {
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
    }

    /* --- CSS CHO LƯỚI SẢN PHẨM --- */
    .row {
        display: flex;
        flex-wrap: wrap;
        margin-right: -10px;
        margin-left: -10px;
        margin-top: 20px; /* Thêm khoảng cách phía trên vì đã bỏ menu lọc */
    }

    /* Khoảng cách giữa các ô */
    .col-item {
        padding: 0 10px;
        margin-bottom: 20px;
    }

    /* Card Sản phẩm */
    .card {
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
        border: 1px solid #e1e1e1;
        transition: all 0.3s ease;
        position: relative;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            border-color: #d0011b;
        }

    .img-wrap {
        height: 220px;
        padding: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
        border-bottom: 1px solid #f1f1f1;
    }

    .card-img-top {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        transition: transform 0.3s;
    }

    .card:hover .card-img-top {
        transform: scale(1.05);
    }

    .card-body {
        padding: 15px;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    h5.card-title {
        font-size: 15px;
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 42px;
    }

    .price-text {
        color: #d0011b;
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .btn-detail {
        display: block;
        width: 100%;
        padding: 8px 0;
        background-color: #fff;
        color: #d0011b;
        border: 1px solid #d0011b;
        text-align: center;
        text-decoration: none;
        border-radius: 4px;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 13px;
        transition: all 0.2s;
    }

        .btn-detail:hover {
            background-color: #d0011b;
            color: #fff;
        }
</style>

<div class="container" style="max-width: 1200px;">

    <div class="row">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                /* CHIA CỘT
                col-lg-3: PC (12/3 = 4 sản phẩm/hàng)
                col-md-4: Tablet (12/4 = 3 sản phẩm/hàng)
                col-6: Mobile (2 sản phẩm/hàng)
                */
                <div class="col-lg-3 col-md-4 col-6 col-item">
                    <div class="card">
                        <div class="img-wrap">
                            @{
                                var imgSrc = !string.IsNullOrEmpty(item.MainImageUrl) ? item.MainImageUrl :
                                (item.Images != null && item.Images.Count > 0 ? item.Images.FirstOrDefault().ImageUrl : "https://placehold.co/400");
                            }
                            <img src="@imgSrc" class="card-img-top" alt="@item.Name" />
                        </div>

                        <div class="card-body">
                            <div>
                                <h5 class="card-title">@item.Name</h5>
                                <p class="price-text">@item.Price.ToString("#,##0") ₫</p>
                            </div>

                            <a href="/Product/Detail/@item.Id" class="btn-detail">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div style="width: 100%; text-align: center; padding: 50px; color: #666;">
                <p>Không tìm thấy sản phẩm nào.</p>
            </div>
        }
    </div>
</div>