@model WebApplication1.Models.VerifyChangePasswordViewModel
@{
    ViewData["Title"] = "Xác thực đổi mật khẩu";
    Layout = "~/Views/Shared/_LayoutForLogin.cshtml";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0" style="max-width: 420px; width: 100%;">
        <div class="card-body p-4">

            <div class="text-center mb-4">
                <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3"
                     style="width: 70px; height: 70px;">
                    <i class="bi bi-shield-lock fs-2 text-primary"></i>
                </div>
                <h4 class="fw-bold">Xác thực bảo mật</h4>
                <p class="text-muted small">
                    Nhập mã OTP gồm 6 chữ số đã được gửi đến email của bạn
                </p>
            </div>

            <form asp-action="VerifyChangePassword" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-semibold">Mã xác thực (OTP)</label>
                    <input asp-for="Otp"
                           class="form-control form-control-lg text-center"
                           placeholder="••••••"
                           maxlength="6"
                           autocomplete="one-time-code" />
                    <span asp-validation-for="Otp" class="text-danger small"></span>
                </div>

                <button type="submit"
                        class="btn btn-primary btn-lg w-100 mt-2">
                    Xác nhận
                </button>
            </form>
        </div>
    </div>
</div>
