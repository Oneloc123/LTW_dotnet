@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // Toggle password visibility (generic)
            document.querySelectorAll('.password-toggle').forEach(btn => {
                btn.addEventListener('click', function () {
                    const targetId = this.getAttribute('data-target');
                    const input = document.getElementById(targetId);
                    const icon = this.querySelector('i');

                    if (input.type === 'password') {
                        input.type = 'text';
                        icon.classList.replace('fa-eye', 'fa-eye-slash');
                    } else {
                        input.type = 'password';
                        icon.classList.replace('fa-eye-slash', 'fa-eye');
                    }
                });
            });

            // Password strength
            const newPassword = document.getElementById('newPassword');
            const segments = [
                document.getElementById('strength1'),
                document.getElementById('strength2'),
                document.getElementById('strength3'),
                document.getElementById('strength4')
            ];
            const strengthText = document.getElementById('strengthText');

            newPassword.addEventListener('input', function () {
                const p = this.value;
                let s = 0;

                if (p.length >= 8) s++;
                if (/[a-z]/.test(p)) s++;
                if (/[A-Z]/.test(p)) s++;
                if (/[0-9]/.test(p)) s++;

                segments.forEach((seg, i) => {
                    if (i < s) {
                        seg.style.backgroundColor =
                            s <= 2 ? '#dc3545' :
                            s === 3 ? '#ffc107' : '#28a745';
                    } else {
                        seg.style.backgroundColor = '#e1e5e9';
                    }
                });

                strengthText.textContent =
                    s <= 2 ? 'Yếu' :
                    s === 3 ? 'Trung bình' : 'Mạnh';
            });

            // Confirm password match
            const confirm = document.getElementById('confirmNewPassword');
            const hint = document.getElementById('passwordMatchHint');

            function checkMatch() {
                if (!confirm.value) {
                    hint.textContent = '';
                } else if (newPassword.value === confirm.value) {
                    hint.textContent = '✓ Mật khẩu khớp';
                    hint.style.color = '#28a745';
                } else {
                    hint.textContent = '✗ Mật khẩu không khớp';
                    hint.style.color = '#dc3545';
                }
            }

            newPassword.addEventListener('input', checkMatch);
            confirm.addEventListener('input', checkMatch);
        });
    </script>
}
